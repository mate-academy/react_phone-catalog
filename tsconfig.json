{
  "extends": "@mate-academy/students-ts-config",
  "include": [
    "src"
  ],
  "compilerOptions": {
    "sourceMap": false,
    "types": ["node", "cypress"],
    "baseUrl": ".",
    "paths": {
      "@app/*":      ["src/app/*"],
      "@constants/*":   ["src/shared/constants/*"],
      "@ui/*":   ["src/shared/ui/*"],
      "@mixins/*":   ["src/shared/styles/mixins/*"],
      "@shared/*":   ["src/shared/*"],
      "@entities/*":   ["src/entities/*"],
      "@widgets/*":   ["src/widgets/*"],
    }
  }
}
