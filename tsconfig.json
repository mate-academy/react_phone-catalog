{
  "extends": "@mate-academy/students-ts-config",
  "include": ["src"],
  "compilerOptions": {
    "sourceMap": false,
    "types": ["node", "cypress"],

    "baseUrl": "./src",
    "paths": {
      "@sTypes/*": ["./modules/shared/types/*"],
      "@store/*": ["./modules/shared/store/*"],
      "@hooks/*": ["./modules/shared/hooks/*"],
      "@utils/*": ["./modules/shared/utils/*"],
      "@styles/*": ["./modules/shared/styles/utils/*"],
      "@features/*": ["./modules/shared/features/*"],
      "@services/*": ["./modules/shared/services/*"],
      "@components/*": ["./modules/shared/components/*"],

      "@App/*": ["./modules/App/*"],
      "@HomePage/*": ["./modules/HomePage/*"],
      "@ProductsPage/*": ["./modules/ProductsPage/*"]
    }
  }
}
