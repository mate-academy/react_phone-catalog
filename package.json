    "react-dom": "^18.3.1",
    "react-hook-form": "^7.60.0",
    "react-paginate": "^8.3.0",
    "react-responsive": "^10.0.1",
    "react-router-dom": "^7.6.3",
    "react-slick": "^0.30.3",
    "react-toastify": "^11.0.5",
