    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "react-transition-group": "^4.4.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.tsx": [
